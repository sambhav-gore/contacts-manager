div(ng-include='"components/navbar/navbar.html"')

section.main-content-area
	.page-title
		.row
			.col-sm-12
				h2 Contacts
				ol.breadcrumb
					li
						a(href='/') Home
					li.active Contacts
		a.floating-button(href='' ng-click="displayAddEditContact('Add New Contact', {})", uib-tooltip='Add New Contact') +
	.page-content-area
		.row
			.col-sm-12 
				ul.contacts-list.row
					li.contact-list-item.col-md-6.col-lg-4(ng-repeat='contact in contacts')
						div.contact-card 
							div.thumb 
								img(ng-src="{{contact.imageSrc}}", alt="")
							div.details
								div.heading {{contact.name}} 
								div.tel {{contact.tel}}
								div.email 
									a(href="email:{{contact.email}}"){{contact.email}}
						div.tool-bar 
							a(href="" uib-tooltip="Edit Contact" ng-click="displayAddEditContact('Edit Contact', contact)") 
								i.fa.fa-pencil
							a(href="" ng-click="removeContact(contact)" uib-tooltip="Remove Contact") 
								i.fa.fa-trash
div(ng-include='"components/footer/footer.html"')